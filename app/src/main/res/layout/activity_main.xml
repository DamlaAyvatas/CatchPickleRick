<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="69dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timeText">

        <ImageView
            android:id="@+id/pickle1"
            android:layout_width="85dp"
            android:layout_height="116dp"
            android:layout_row="0"
            android:layout_column="0"
            android:onClick="pickleClick"
            app:srcCompat="@drawable/picklerick" />

        <ImageView
            android:id="@+id/pickle2"
            android:layout_width="100dp"
            android:layout_height="112dp"
            android:layout_row="0"
            android:layout_column="1"
            android:onClick="pickleClick"
            app:srcCompat="@drawable/picklerick" />

        <ImageView
            android:id="@+id/pickle3"
            android:layout_width="102dp"
            android:layout_height="115dp"
            android:layout_row="0"
            android:layout_column="2"
            android:onClick="pickleClick"
            app:srcCompat="@drawable/picklerick" />

        <ImageView
            android:id="@+id/pickle4"
            android:layout_width="85dp"
            android:layout_height="116dp"
            android:layout_row="1"
            android:layout_column="0"
            android:onClick="pickleClick"
            app:srcCompat="@drawable/picklerick" />

        <ImageView
            android:id="@+id/pickle5"
            android:layout_width="104dp"
            android:layout_height="110dp"
            android:layout_row="1"
            android:layout_column="1"
            android:onClick="pickleClick"
            app:srcCompat="@drawable/picklerick" />

        <ImageView
            android:id="@+id/pickle6"
            android:layout_width="97dp"
            android:layout_height="113dp"
            android:layout_row="1"
            android:layout_column="2"
            android:onClick="pickleClick"
            app:srcCompat="@drawable/picklerick" />

        <ImageView
            android:id="@+id/pickle7"
            android:layout_width="85dp"
            android:layout_height="116dp"
            android:layout_row="2"
            android:layout_column="0"
            android:onClick="pickleClick"
            app:srcCompat="@drawable/picklerick" />

        <ImageView
            android:id="@+id/pickle8"
            android:layout_width="99dp"
            android:layout_height="113dp"
            android:layout_row="2"
            android:layout_column="1"
            android:onClick="pickleClick"
            app:srcCompat="@drawable/picklerick" />

        <ImageView
            android:id="@+id/pickle9"
            android:layout_width="97dp"
            android:layout_height="114dp"
            android:layout_row="2"
            android:layout_column="2"
            android:onClick="pickleClick"
            app:srcCompat="@drawable/picklerick" />

        <Button
            android:id="@+id/restartButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"
            android:onClick="restartClick"
            android:text="Restart" />

        <Button
            android:id="@+id/exitButton"
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:onClick="exitClick"
            android:text="EXIT" />

    </GridLayout>

    <TextView
        android:id="@+id/timeText"
        android:layout_width="91dp"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="85dp"
        android:text="Time: "
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.091" />

    <TextView
        android:id="@+id/scoreText"
        android:layout_width="72dp"
        android:layout_height="30dp"
        android:layout_marginTop="28dp"
        android:text="Score: "
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timeText"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>